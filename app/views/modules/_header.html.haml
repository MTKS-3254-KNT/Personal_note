.header
  .header__inner
    .header__inner__image
      = link_to image_tag("logo/PN.png"),root_path, data: {"turbolinks" => false}
    .header__inner__box
      .header__inner__box__search
        = form_with url: "#", local: true, method: :get, class: "header__inner__box__search__form"do |form|
          = form.text_field :keyword, placeholder: "キーワードから探す", class: "header__inner__box__search__form__input"
          %label.header__inner__box__search__form__label
            = form.submit "" , class: "header__inner__box__search__form__label__btn" 
            = image_tag "icon/icon-search.png"
      .header__inner__box__user
        -# - if user_signed_in?
        .header__inner__box__user__lists
          .header__inner__box__user__lists__list
            = link_to "マイページ", "#", data: {"turbolinks" => false},class: "header__inner__box__user__lists__list__btn"
          .header__inner__box__user__lists__list
            = link_to "ログアウト", "#", method: :delete , data: {"turbolinks" => false},class: "header__inner__box__user__lists__list__btn"
        -# - else
        .header__inner__box__user__lists
          .header__inner__box__user__lists__list
            = link_to "ログイン", "#", data: {"turbolinks" => false},class: "header__inner__box__user__lists__list__btn"
          .header__inner__box__user__lists__list
            = link_to "新規会員登録", "#", data: {"turbolinks" => false}, class: "header__inner__box__user__lists__list__btn"
